@model IEnumerable<PrivateLessonViewModel>
@{
    ViewData["Title"] = "Lessons";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count() == 0)
{
    <h2>Kayıt Bulunamadı</h2>
}
else
{


    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="training-schedule-top">@Model.FirstOrDefault().TrainerName</h3>
                <div class="table table-striped">
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>


                            <tr>
                                @{
                                    int a = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    a++;
                                    if (a == 8)
                                    {
                                        break;
                                    }
                                    <td>
                                        @item.Date.ToString("dd-MM-yyyy")<br />
                                        @if (item.Lesson == "empty")
                                        {

                                            <a asp-action="LessonUpdate" asp-controller="Trainer" asp-route-id="@item.TrainerId" asp-route-date="@item.Date.ToShortDateString()" class="btn">BOŞ</a>
                                        }
                                        else if (item.Lesson == "cancel")
                                        {
                                            <div class="name"><a asp-action="LessonUpdate" asp-controller="Trainer" asp-route-id="@item.TrainerId" asp-route-date="@item.Date" class="btn">İPTAL</a></div>
                                        }
                                        else
                                        {
                                            <div class="name"><a asp-action="LessonUpdate" asp-controller="Trainer" asp-route-id="@item.TrainerId" asp-route-date="@item.Date" class="btn">DOLU</a></div>
                                        }


                                    </td>

                                }
                            </tr>
                            <tr>
                                @foreach (var item in Model.Skip(7))
                                {
                                    <td>
                                        @item.Date.ToString("dd-MM-yyyy")<br />
                                        @if (item.Lesson == "empty")
                                        {

                                            <a asp-action="LessonUpdate" asp-controller="Trainer" asp-route-id="@item.TrainerId" asp-route-date="@item.Date.ToShortDateString()" class="btn">BOŞ</a>
                                        }
                                        else if (item.Lesson == "cancel")
                                        {
                                            <div class="name"><a asp-action="LessonUpdate" asp-controller="Trainer" asp-route-id="@item.TrainerId" asp-route-date="@item.Date" class="btn">İPTAL</a></div>
                                        }
                                        else
                                        {
                                            <div class="name"><a asp-action="LessonUpdate" asp-controller="Trainer" asp-route-id="@item.TrainerId" asp-route-date="@item.Date" class="btn">DOLU</a></div>
                                        }



                                    </td>

                                }
                            </tr>

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
}
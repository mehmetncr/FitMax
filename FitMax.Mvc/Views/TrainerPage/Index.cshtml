@model IEnumerable<PrivateLessonViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<section class="s-our-trainer" style="margin-top:-100px;margin-right:100px">
    <div class="container">
        <img class="about-effect-tringle" src="~/fitmax/assets/img/tringle-about-top.svg" alt="img">
        <h2 class="title-decor">@ViewBag.trainer.FirstName <span>@ViewBag.trainer.Lastname</span></h2>
   
        <div class="row our-trainer-row">
            
            <div class="col-md-5 trainer-img-col">
                <div class="trainer-img-cover">
                    <img class="our-trainer-effect-1" src="~/fitmax/assets/img/line-red-1.svg" alt="img">
                    <img class="our-trainer-effect-2" src="~/fitmax/assets/img/line-red-2.svg" alt="img">
                    <img class="our-trainer-effect-3" src="~/fitmax/assets/img/square-yellow.svg" alt="img">
                    <img class="our-trainer-img" src="@ViewBag.trainer.ImgUrl" alt="img">
                </div>
            </div>
        
            <div class="col-md-7">
                <div class="our-trainer-info">
                    <p class="slogan">@ViewBag.trainer.Description</p>
                    <ul class="social-list">
                        <li><a target="_blank" href="@ViewBag.trainer.Facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                        <li><a target="_blank" href="@ViewBag.trainer.Twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                        <li><a target="_blank" href="@ViewBag.trainer.Youtube"><i class="fa fa-youtube" aria-hidden="true"></i></a></li>
                        <li><a target="_blank" href="@ViewBag.trainer.Instagram"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ============= HEADER-TITLE END ============= -->
<partial name="_TrainercalendarPartialView" data="@Model" />

